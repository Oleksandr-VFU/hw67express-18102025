        /* –¢–µ–º–Ω–∞ —Ç–µ–º–∞ */
        body.theme-dark {
            background-color: #1a1a1a;
            color: #e0e0e0;
        }
        body.theme-dark .container {
            background: #2d2d2d;
            color: #e0e0e0;
        }
        body.theme-dark .nav a {
            background: #3a3a3a;
            color: #4fc3f7;
        }
        body.theme-dark .nav a:hover {
            background: #4a4a4a;
        }
        
        /* –°–∏–Ω—è —Ç–µ–º–∞ */
        body.theme-blue {
            background-color: #e3f2fd;
            color: #0d47a1;
        }
        body.theme-blue .container {
            background: #bbdefb;
            color: #0d47a1;
        }
        body.theme-blue .nav a {
            background: #2196f3;
            color: white;
        }
        body.theme-blue .nav a:hover {
            background: #1976d2;
        }
        
        /* –ó–µ–ª–µ–Ω–∞ —Ç–µ–º–∞ */
        body.theme-green {
            background-color: #e8f5e8;
            color: #1b5e20;
        }
        body.theme-green .container {
            background: #c8e6c9;
            color: #1b5e20;
        }
        body.theme-green .nav a {
            background: #4caf50;
            color: white;
        }
        body.theme-green .nav a:hover {
            background: #388e3c;
        }
        .container {
            max-width: 900px;
            margin: 0 auto;
            background: white;
            padding: 25px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }
        .header {
            border-bottom: 2px solid #e9ecef;
            padding-bottom: 20px;
            margin-bottom: 25px;
        }
        .header h1 {
            color: #495057;
            margin: 0;
        }
        .nav {
            margin: 20px 0;
        }
        .nav a {
            display: inline-block;
            margin-right: 20px;
            padding: 8px 15px;
            text-decoration: none;
            color: #007bff;
            background: #e7f3ff;
            border-radius: 5px;
            transition: background 0.3s;
        }
        .nav a:hover {
            background: #cce7ff;
        }
        .article-list {
            list-style: none;
            padding: 0;
        }
        .article-list li {
            margin: 12px 0;
        }
        .article-list a {
            display: block;
            padding: 15px;
            background: #e9ecef;
            text-decoration: none;
            color: #495057;
            border-radius: 6px;
            transition: background 0.3s;
        }
        .article-list a:hover {
            background: #dee2e6;
        }
        .api-endpoints {
            background: #f8f9fa;
            padding: 15px;
            border-radius: 5px;
            margin-top: 20px;
        }
        .api-endpoints code {
            background: #e9ecef;
            padding: 2px 6px;
            border-radius: 3px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1><%= title || "Express API" %></h1>
        </div>
        <div class="nav">
            <a href="/">–ì–æ–ª–æ–≤–Ω–∞</a>
            <a href="/users">–ö–æ—Ä–∏—Å—Ç—É–≤–∞—á—ñ</a>
            <a href="/articles">–°—Ç–∞—Ç—Ç—ñ</a>
            <a href="/protected">üîí –ó–∞—Ö–∏—â–µ–Ω–∞</a>
            <a href="/settings">–ù–∞–ª–∞—à—Ç—É–≤–∞–Ω–Ω—è</a>
        </div>
        
        <h2>–°–ø–∏—Å–æ–∫ —Å—Ç–∞—Ç–µ–π</h2>
        
        <p>–¢—É—Ç –≤—ñ–¥–æ–±—Ä–∞–∂–∞—é—Ç—å—Å—è –≤—Å—ñ —Å—Ç–∞—Ç—Ç—ñ –≤ —Å–∏—Å—Ç–µ–º—ñ (–¥–æ—Å—Ç—É–ø–Ω–æ —Ç—ñ–ª—å–∫–∏ –¥–ª—è admin –∫–æ—Ä–∏—Å—Ç—É–≤–∞—á—ñ–≤)</p>
        
        <% if (articles && articles.length > 0) { %>
            <ul class="article-list">
                <% articles.forEach(function(article) { %>
                    <li>
                        <a href="/articles/<%= article._id %>">
                            <strong><%= article.title %></strong><br>
                            <small>–ê–≤—Ç–æ—Ä: <%= article.authorName %> | –ö–∞—Ç–µ–≥–æ—Ä—ñ—è: <%= article.category %> | –ü–µ—Ä–µ–≥–ª—è–¥—ñ–≤: <%= article.views %></small>
                        </a>
                    </li>
                <% }); %>
            </ul>
        <% } else { %>
            <p>–°—Ç–∞—Ç–µ–π –Ω–µ –∑–Ω–∞–π–¥–µ–Ω–æ</p>
        <% } %>
        
        <div class="api-endpoints">
            <p><strong>API endpoints:</strong></p>
            <ul>
                <li>
                    <code>GET /articles</code> - –æ—Ç—Ä–∏–º–∞—Ç–∏ —Å–ø–∏—Å–æ–∫ —Å—Ç–∞—Ç–µ–π (JSON)
                </li>
                <li>
                    <code>POST /articles</code> - —Å—Ç–≤–æ—Ä–∏—Ç–∏ –Ω–æ–≤—É —Å—Ç–∞—Ç—Ç—é (JSON)
                </li>
                <li>
                    <code>GET /articles/:id</code> - –æ—Ç—Ä–∏–º–∞—Ç–∏ —Å—Ç–∞—Ç—Ç—é –∑–∞ ID (JSON/HTML)
                </li>
                <li>
                    <code>PUT /articles/:id</code> - –æ–Ω–æ–≤–∏—Ç–∏ —Å—Ç–∞—Ç—Ç—é (JSON)
                </li>
                <li>
                    <code>DELETE /articles/:id</code> - –≤–∏–¥–∞–ª–∏—Ç–∏ —Å—Ç–∞—Ç—Ç—é (JSON)
                </li>
            </ul>
            
            <p><strong>–ü—Ä–∏–º—ñ—Ç–∫–∞:</strong> –í–µ–±-—ñ–Ω—Ç–µ—Ä—Ñ–µ–π—Å –∞–≤—Ç–æ–º–∞—Ç–∏—á–Ω–æ –∞–≤—Ç–æ—Ä–∏–∑–æ–≤–∞–Ω–∏–π</p>
        </div>

    </div>

    <script>
        // –ß–∏—Ç–∞—î–º–æ —Ç–µ–º—É –∑ cookie —Ç–∞ –∑–∞—Å—Ç–æ—Å–æ–≤—É—î–º–æ
        function getCookie(name) {
            const value = `; ${document.cookie}`;
            const parts = value.split(`; ${name}=`);
            if (parts.length === 2) return parts.pop().split(';').shift();
            return 'light';
        }
        
        // –ó–∞—Å—Ç–æ—Å–æ–≤—É—î–º–æ —Ç–µ–º—É –ø—Ä–∏ –∑–∞–≤–∞–Ω—Ç–∞–∂–µ–Ω–Ω—ñ —Å—Ç–æ—Ä—ñ–Ω–∫–∏
        document.addEventListener('DOMContentLoaded', function() {
            const theme = getCookie('theme');
            document.body.className = 'theme-' + theme;
        });
    </script>
</body>
</html>